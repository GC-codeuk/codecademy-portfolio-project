<div class='main'>
  <div class="my-slider">
	  <ul>
		  <li><img src='https://dl.dropboxusercontent.com/u/22287966/Site%20screenshots/newsroom.png'></li>
		  <li><img src='https://dl.dropboxusercontent.com/u/22287966/Site%20screenshots/junction.png'></li>
		  <li><img src='https://dl.dropboxusercontent.com/u/22287966/Site%20screenshots/innovationCloud.png'></li>
	  </ul>
  </div>
  
  
    <% @projects.all.in_groups_of(3, false) do |project_array| %>
     <div class="row">
      <% project_array.each do |project| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="<%= project.homepage_img %>">
          <div class="caption">
            <h3 class="site_name"> <%= project.site_name %> </h3>
            <p class="description"> <%= project.description %> </p>
          </div>
        </div>
      </div>
       <% end %>
     </div>
    <% end %>  
 
  
</div>